<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="#FFFFFF"
    android:scrollbars="vertical" >
    
    <!-- Action Bar -->
    <com.markupartist.android.widget.ActionBar
	    android:id="@+id/actionbar"
	    style="@style/ActionBar" />
	<View
       android:layout_width="fill_parent"
       android:layout_height="3dp"
       android:layout_marginBottom="5dp"
       android:background="#BDC3C7" />
	
	<!-- inicia el ScrollView -->
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">
        
      <LinearLayout android:orientation="vertical"
        	android:layout_width="fill_parent" 
            android:layout_height="wrap_content">   
            
            <!-- > Datos basicos de la cuenta -->
            <!-- ******************************************************* -->

            <TextView
                android:text="@string/signUp_LabelHeader_BasicData"
                style="@style/headerLabel" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           
           <!-- __________________ Linea divisoria ______________ -->

    	    <View
    	        android:layout_width="fill_parent"
    	        android:layout_height="3dp"
    	        android:layout_marginBottom="5dp"
    	        android:background="@drawable/biljet_gradient" />
            
            
            <!-- Username -->
            <!-- ******************************************************* -->
            
            <TextView 
                android:text="@string/signUp_Label_Username" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/signUp_Label_infoUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             	android:layout_marginBottom="8dp"
                android:text="@string/signUp_Label_infoUsername" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/signUp_Hint_Username"
                android:layout_marginBottom="3dp" />
            	<requestFocus />
           
            <!-- E-mail-->
            <!-- ******************************************************* -->
            
           <TextView 
                android:text="@string/signUp_Label_Email" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/signUp_Hint_Mail"
                android:layout_marginBottom="3dp" />
            	<requestFocus />	
            
            <!-- Contraseña -->
            <!-- ******************************************************* -->
                       	
            <TextView 
                android:text="@string/signUp_Label_Password" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginBottom="3dp" />
            
            <!-- Repetir contraseña -->
            <!-- ******************************************************* -->
                       	
            <TextView 
                android:text="@string/signUp_Label_RepeatPassword" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_RepeatPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginBottom="3dp" />
            
            
            <!-- > Datos opcionales-->
            <!-- ******************************************************* -->

            <TextView
                android:text="@string/signUp_LabelHeader_OptionalData"
                style="@style/headerLabel" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           
           <!-- __________________ Linea divisoria ______________ -->

    	    <View
    	        android:layout_width="fill_parent"
    	        android:layout_height="3dp"
    	        android:layout_marginBottom="5dp"
    	        android:background="@drawable/biljet_gradient" />
            
            <TextView
                android:id="@+id/signUp_Label_infoOptionalData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             	android:layout_marginBottom="8dp"
                android:text="@string/signUp_Label_infoOptionalData" />
            
            <!-- Nombre -->
            <!-- ******************************************************* -->
                       	
            <TextView 
                android:text="@string/signUp_Label_Name" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:layout_marginBottom="3dp" />
            
            <!-- Apellidos -->
            <!-- ******************************************************* -->
                 
            <TextView 
                android:text="@string/signUp_Label_Surname" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Surname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:layout_marginBottom="3dp" />
            
            <!-- Facebook -->
            <!-- ******************************************************* -->
                 
            <TextView 
                android:text="@string/signUp_Label_Facebook" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Facebook"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="3dp" />
           
            <!-- Twitter -->
            <!-- ******************************************************* -->
                 
            <TextView 
                android:text="@string/signUp_Label_Twitter" 
                style="@style/formLabel" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/signUp_EditText_Twitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="3dp" />
            	
            
			<!-- > Separador: Confirmar -->
            <!-- ******************************************************* -->

            <TextView
                android:text="@string/signUp_LabelHeader_Confirm"
                style="@style/headerLabel" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />
           
           <!-- __________________ Linea divisoria ______________ -->

    	    <View
    	        android:layout_width="fill_parent"
    	        android:layout_height="3dp"
    	        android:layout_marginBottom="8dp"
    	        android:background="@drawable/biljet_gradient" />
            
            <!-- > Botones Confirmar + Cancelar-->
            <!-- ******************************************************* -->
    	    
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">  
			    
			    
				<Button
			        android:id="@+id/signUp_Button_CreateUser"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginRight="2dp"
			        android:text="@string/signUp_Button_CreateUser"
			        android:onClick="buttonCreateNewEvent" />
				
			    <Button
			        android:id="@+id/signUp_Button_CancelUser"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="2dp"
			        android:text="@string/signUp_Button_CancelUser"
			        android:onClick="alertCancelNewEvent" />
			    
			</LinearLayout>		            
            
            
         </LinearLayout>
     </ScrollView>
</LinearLayout>
            	