<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    
     >

    <!-- Action Bar -->

	<ViewStub 
	    android:id="@+id/actionBar"
       	android:inflatedId="@+id/header"
        android:layout="@layout/header"
        android:layout_width="fill_parent"
        android:layout_height="60dip" />

	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


		<ImageView
		    android:id="@+id/perfil_imagen"		    
		    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:layout_margin="5dp"
	    	android:layout_gravity="center_vertical"
		    android:contentDescription="@string/contentDescription_Avatar" />
		
		<TextView
		    android:id="@+id/perfil_TxtNombre"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:textColor="#000033"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    />
		
		<TextView
		    android:id="@+id/perfil_LabelCiudad"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_ciudad" />
	
		<TextView 
		    android:id="@+id/perfil_TxtCiudad"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/perfil_LabelBiografia"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_biografia" />
	
		<TextView
		    android:id="@+id/perfil_TxtBiografia"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		    			
		<TextView
		    android:id="@+id/perfil_LabelTwitter"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_twitter" />
	
		<TextView
		    android:id="@+id/perfil_TxtTwitter"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />		
		
		<TextView
		    android:id="@+id/perfil_LabelFacebook"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_facebook" />
	
		<TextView
		    android:id="@+id/perfil_TxtFacebook"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		    
		<TextView
		    android:id="@+id/perfil_LabelLastLogin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_last_login" />
	
		<TextView
		    android:id="@+id/perfil_TxtLastLogin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		    
		<TextView
		    android:id="@+id/perfil_LabelEventsFollow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_events_follow" />
	
		<TextView
		    android:id="@+id/perfil_TxtEventsFollow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		    
		<TextView
		    android:id="@+id/perfil_LabelEventsOrganized"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_events_organized" />
	
		<TextView
		    android:id="@+id/perfil_TxtEventsOrganized"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		    
		<TextView
		    android:id="@+id/perfil_LabelEventsSignup"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000066"
		    android:text="@string/perfil_events_signup" />
	
		<TextView
		    android:id="@+id/perfil_TxtEventsSignup"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />	
		
	</LinearLayout>
	
</LinearLayout>