<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="#F0F8FF"
    android:orientation="vertical" >

    <!-- Action Bar -->

	<ViewStub
		android:id="@+id/actionBar"
		android:inflatedId="@+id/header"
	    android:layout="@layout/header"
	    android:layout_width="fill_parent"
	    android:layout_height="60dip" />
	
	<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent">
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" >
		
		    
			<ImageView
				android:id="@+id/myProfile_Avatar"	
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_gravity="center_vertical"
				android:contentDescription="@string/contentDescription_Avatar" />
			
			<TextView
				android:id="@+id/myProfile_TxtName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000033"
				android:textAppearance="?android:attr/textAppearanceLarge"
				/>
			
			<TextView
				android:id="@+id/myProfile_LabelCity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelCity" />
			
			<TextView
				android:id="@+id/myProfile_TxtCiudad"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
				
			<TextView
				android:id="@+id/myProfile_LabelBio"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelBio" />
			
			<TextView
				android:id="@+id/myProfile_TxtBio"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
				
			<TextView
				android:id="@+id/myProfile_LabelTwitter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelTwitter" />
			
			<TextView
				android:id="@+id/myProfile_TxtTwitter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
			<TextView
				android:id="@+id/myProfile_LabelFacebook"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelFacebook" />
			
			<TextView
				android:id="@+id/myProfile_TxtFacebook"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
			<TextView
				android:id="@+id/myProfile_LabelLastLogin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelLast_login" />
			
			<TextView
				android:id="@+id/myProfile_TxtLastLogin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
			<TextView
				android:id="@+id/myProfile_LabelEventsFollow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelEvents_follow" />
			
			<TextView
				android:id="@+id/myProfile_TxtEventsFollow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
			<TextView
				android:id="@+id/myProfile_LabelEventsOrganized"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelEvents_organized" />
			
			<TextView
				android:id="@+id/myProfile_TxtEventsOrganized"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
			<TextView
				android:id="@+id/myProfile_LabelEventsSignup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000066"
				android:text="@string/myProfile_LabelEvents_signup" />
			
			<TextView
				android:id="@+id/myProfile_TxtEventsSignup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />	
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>