<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >
    
    <!-- Action Bar -->
	<ViewStub   
	  	android:id="@+id/actionBar"
       	android:inflatedId="@+id/header"
        android:layout="@layout/header"
        android:layout_width="fill_parent"
        android:layout_height="60dip" />
	
	<!-- inicia el ScrollView -->
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
       
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">   
            
            <TextView 
                android:text="@string/newEvent_LabelName"  
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <EditText 
                android:id="@+id/newEvent_EditName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Introduzca el nombre del evento"/>
      	        
            <TextView 
                android:text="@string/newEvent_LabelEventType" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText 
                android:id="@+id/newEvent_EditEventType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:hint="Concierto, compleaÃ±os, Cine, ..."/>
            
            <TextView 
                android:text="@string/newEvent_LabelSite" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />      
            <EditText
                android:id="@+id/newEvent_EditSite" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Lugar del acontecimiento" />
            
            <TextView 
                android:text="@string/newEvent_LabelDate" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />    
   
            
            <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">    
		    
			    <EditText 
			        android:id="@+id/newEvent_EditDate"	        
			        android:layout_weight="1"        
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:clickable="false"
			        android:cursorVisible="false" 
	        		android:focusable="false" 
	        		android:focusableInTouchMode="false" />
			    
			    <Button
			        android:id="@+id/newEvent_ButtonSetDate"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/newEvent_ButtonSetDate"
			        android:onClick="setDate" />
			    
			</LinearLayout>
         
            <TextView 
                android:text="@string/newEvent_LabelTime" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal">    
			    
			    <EditText 
			        android:id="@+id/newEvent_EditTime"	        
			        android:layout_weight="1"        
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:clickable="false"
		        	android:cursorVisible="false" 
        			android:focusable="false" 
        			android:focusableInTouchMode="false"
			        android:hint="@string/newEvent_LabelTime" />
			    
			    <Button
			        android:id="@+id/newEvent_ButtonSetTime"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/newEvent_ButtonSetTime"
			        android:onClick="setTime" />
				    
			</LinearLayout>	            
            
            <TextView 
                android:text="@string/newEvent_LabelPrice" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText 
                android:id="@+id/newEvent_EditPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Precio en euros" />
            
            <TextView 
                android:text="@string/newEvent_LabelConfirmedPeople"
                 android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText 
                android:id="@+id/newEvent_EditConfirmedPeople"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Nro de personas que asisten" />
            
            <TextView 
                android:text="@string/newEvent_LabelCapacity" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <EditText 
                android:id="@+id/newEvent_EditCapacity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"                
                android:hint="@string/newEvent_LabelCapacity" />
            
           		<!-- Image for new event  -->
           		
				 <ImageView 
			        android:id="@+id/newEvent_Image" 
			        android:src="@drawable/logo_evento" 
			        android:layout_width="200dp"
			        android:layout_height="200dp"
			        android:layout_weight="1"
			        android:layout_gravity="center">        
			    </ImageView>
			         
			    <Button	
			        android:id="@+id/newEvent_ButtonChangeImage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"  
			        android:layout_weight="0"
			        android:text="Change Image"
			        android:layout_gravity="center">        
			    </Button>
			    
				<TextView 
	                android:text="@string/newEvent_LabelInfo" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />
				   
	            <EditText 
	                android:id="@+id/newEvent_EditInfo"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:singleLine="false" 
	                android:lines="3"       
	                android:gravity="top"     	
	            	android:inputType="text|textMultiLine"
	                android:hint="@string/newEvent_LabelInfo"/>    	   
	            
	             <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">  
				    
				    
					<Button
				        android:id="@+id/newEvent_ButtonCreateEvent"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:text="@string/newEvent_ButtonCreateEvent"
				        android:onClick="createNewEvent" 
				        android:layout_weight="2"/>
					
				    <Button
				        android:id="@+id/newEvent_ButtonCancelEvent"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:text="@string/newEvent_ButtonCancelEvent"
				        android:onClick="alertCancelNewEvent"
				        android:layout_weight="2" />
				    
				</LinearLayout>			             
        </LinearLayout>        	         
    </ScrollView>	
</LinearLayout>
