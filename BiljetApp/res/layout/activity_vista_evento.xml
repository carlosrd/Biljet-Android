<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <!-- Action Bar -->

	<ViewStub 
	    android:id="@+id/actionBar"
       	android:inflatedId="@+id/header"
        android:layout="@layout/header"
        android:layout_width="fill_parent"
        android:layout_height="60dip" />
	
	<!-- Vista Evento -->

	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
		<ImageView
		    android:id="@+id/vistaEvento_ImagenEvento"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:layout_gravity="center_vertical"
		    android:contentDescription="@string/contentDescription_ImagenEvento" />

		<Button
		    android:id="@+id/vistaEvento_BotonLeerQR"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dp"
		    android:text="@string/vistaEvento_LabelBtnLeerQr" />

	</LinearLayout>
	
		<TextView
		    android:id="@+id/vistaEvento_TxtNombre"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		<TextView
		    android:id="@+id/vistaEvento_TxtTipo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/vistaEvento_LabelLugar"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelLugar" />
		<TextView
		    android:id="@+id/vistaEvento_TxtLugar"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/vistaEvento_LabelFecha"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelFecha" />
		<TextView
		    android:id="@+id/vistaEvento_TxtFecha"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/vistaEvento_LabelPrecio"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelPrecio" />
		<TextView
		    android:id="@+id/vistaEvento_TxtPrecio"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/vistaEvento_LabelNumInvitados"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelNumInvitados"/>
		<TextView
		    android:id="@+id/vistaEvento_TxtNumInvitados"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
				
		<TextView
		    android:id="@+id/vistaEvento_LabelAforo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelAforo" />
		<TextView
		    android:id="@+id/vistaEvento_TxtAforo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		<TextView
		    android:id="@+id/vistaEvento_LabelInfo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/vistaEvento_LabelInfo"/>
		<TextView
		    android:id="@+id/vistaEvento_TxtInfo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />

</LinearLayout>