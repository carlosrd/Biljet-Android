<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   	<!-- EditText en estado Presionado-->
    <!-- ****************************************** -->
    <item android:state_pressed="true">
        <shape>
    	    <solid
                android:color="#DCE4EC" />
            <stroke
                android:width="3dp"
                android:color="#2ECC71" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
        </shape>
    </item>
    
    <!-- EditText en estado Resaltado -->
    <!-- ****************************************** -->
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#1ABC9C" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
        </shape>
    </item>
    
    <!-- EditText en estado Seleccionado -->
    <!-- ****************************************** -->
    <item android:state_selected="true">
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#1ABC9C" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
		</shape>     
    </item>
    
    <!-- EditText en estado normal -->
    <!-- ****************************************** -->
    <item android:state_enabled="true">
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#DCE4EC" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
            <padding 
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    
    <!-- EditText en estado desactivado -->
    <!-- ****************************************** -->
    <item>
        <shape>
            <solid
                android:color="#EAEDED" />
            <stroke
                android:width="3dp"
                android:color="#EAEDED" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
            <padding 
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
	</item>
	
</selector>