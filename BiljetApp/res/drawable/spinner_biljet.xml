<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    

    
    <!-- SPINNER en estado Desactivado -->
    <!-- ******************************************** -->
    <layer-list android:state_enabled="true"> 
    <item>
        <nine-patch android:src="@drawable/btn_dropdown_pick" />
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#DCE4EC" />
            <corners
                android:radius="9dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
            <padding 
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    </layer-list>
</selector>