<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item> 
        <item name="android:editTextStyle">@style/EditText_biljet</item>
        <item name="android:buttonStyle">@style/Button_biljet</item>
        <item name="android:spinnerStyle">@style/Spinner_biljet</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item> 
        <item name="android:editTextStyle">@style/EditText_biljet</item>
        <item name="android:buttonStyle">@style/Button_biljet</item>
        <item name="android:spinnerStyle">@style/Spinner_biljet</item>
    </style>
    
    <!-- ACTION BAR STYLE (OVERRIDE)
    	 *********************************************************************************** -->  
        
    
    <style name="ActionBarHomeItem" parent="ActionBarItem">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>
    
    
   <!-- ESTILO ETIQUETAS DE FORMULARIOS (LABEL FORMS)
	 	 *********************************************************************************** -->      
    
    <style name="formLabel">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">#34495E</item>
    	<item name="android:layout_marginBottom">2dp</item>
    </style>
    
    <style name="headerLabel">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">22sp</item>
    	<item name="android:textColor">#34495E</item>
    	<item name="android:layout_marginBottom">2dp</item>
    </style>
    
    <style name="dayViewLabel">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">#FFFFFF</item>
    </style>
    
    <!-- ESTILO ETIQUETAS DEL MENU
	 	 *********************************************************************************** -->      
    
    <style name="menuItem_titleOption">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">22sp</item>
    	<item name="android:textColor">#FFFFFF</item>
		<item name="android:layout_marginBottom">3dp</item>
    </style> 
    
    <style name="menuItem_subtitleOption">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">14sp</item>
    	<item name="android:textColor">#e5e8ea</item>
    	<item name="android:layout_marginBottom">2dp</item>
    </style> 
    
    
  <!-- ========================================================================================= 
       Android Widgets
       ========================================================================================= -->  
    
    
    <!-- Estilo EditText del proyecto -->
    <!-- ********************************************************************** -->
    <style name="EditText_biljet" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_biljet</item> 
    </style>  
    
    <!-- Estilo EditText del proyecto -->
    <!-- ********************************************************************** -->
    <style name="Button_biljet" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_biljet</item> 
        <item name="android:textColor">#FFFFFF</item> 
	    <item name="android:textStyle">bold</item>
    </style>  
    
    <!-- Estilo EditText del proyecto -->
    <!-- ********************************************************************** -->
    <style name="Spinner_biljet" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spinner_biljet</item> 
        <item name="android:textColor">#000000</item> 
	    <item name="android:textStyle">bold</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:layout_width">fill_parent</item>
    </style>  
    
    
    
    
  <!-- ========================================================================================= 
       Deprecated Styles 
       ========================================================================================= -->  
    
    
    
    <!-- ESTILO TEXTO HEADER SECCIONES
    	 *********************************************************************************** -->  
        
    <style name="HeaderText">

      <item name="android:textColor">#FFFFFF</item>

      <item name="android:textStyle">bold</item>

      <item name="android:textSize">16sp</item>

      <item name="android:padding">5dp</item>
      
  	</style>
  	
    <!-- ESTILO TEXTO BOTON
	 	 *********************************************************************************** -->  
        
    <style name="button_text">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">16dp</item>
	    <item name="android:textStyle">italic</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>

  	
    <!-- ESTILO TEXTO LABEL VISTA EVENTO
    	 *********************************************************************************** -->  
        
    <style name="LabelVistaEventoText">

      <item name="android:textColor">#000000</item>

      <item name="android:textStyle">bold</item>

      <item name="android:textSize">16sp</item>

      <item name="android:padding">5dp</item>

  	</style>
  	

    <!-- ESTILO TEXTO EVENTO
    	 *********************************************************************************** -->      
    
    <style name="EventTextLabel">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textStyle">normal</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">#000033</item>
    	<item name="android:layout_marginLeft">10dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    </style>
    
    <style name="EventTextContent">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginLeft">10dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    	<item name="android:textStyle">italic</item>
    	<item name="android:textSize">14sp</item>
    </style>

</resources>