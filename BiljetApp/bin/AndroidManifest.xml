<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biljet.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" >
    </uses-permission>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.biljet.app.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.biljet.app.MiPerfilActivity"
            android:label="@string/title_activity_mi_perfil" >
        </activity>
        <activity
            android:name="com.biljet.app.ProximosEventosActivity"
            android:label="@string/title_activity_proximos_eventos" >
        </activity>
        <activity
            android:name="com.biljet.app.MisEventosActivity"
            android:label="@string/title_activity_mis_eventos" >
        </activity>
        <activity
            android:name="com.biljet.app.MisAmigosActivity"
            android:label="@string/title_activity_mis_amigos" >
        </activity>
        <activity
            android:name="com.biljet.app.NuevoEventoActivity"
            android:label="@string/title_activity_nuevo_evento" >
        </activity>
        <activity
            android:name="com.biljet.app.VistaEventoActivity"
            android:label="@string/title_activity_vista_evento" >
        </activity>

        <!-- Informacion para el intent SCAN del QR -->
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.biljet.app.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.biljet.app.VistaAmigoActivity"
            android:label="@string/title_activity_vista_amigo" >
        </activity>
    </application>

</manifest>